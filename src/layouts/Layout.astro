---
import "../styles/global.css";
import Analytics from '@vercel/analytics/astro'
import Navbar from '../components/Navbar.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NexoMedix | Únete como especialista</title>
    <meta name="description" content="Únete a NexoMedix, la plataforma inteligente que conecta pacientes con especialistas verificados en México. Reserva tu lugar en la beta y recibe pacientes automáticamente. Sin intermediarios, agenda flexible y perfil verificado." />
    <meta name="keywords" content="NexoMedix, especialistas, pacientes, salud, beta, médicos, psicólogos, nutricionistas, México, conectar, agenda, plataforma médica, registro, profesionales de la salud, consulta, online, presencial, verificados" />
    <meta name="author" content="NexoMedix" />
    <meta property="og:title" content="NexoMedix | Únete como especialista" />
    <meta property="og:description" content="Conecta con pacientes automáticamente y haz crecer tu consulta. Participa en la beta exclusiva para especialistas en México." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://profindly.vercel.app/" />
    <meta property="og:image" content="https://profindly.vercel.app/logo.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="NexoMedix | Únete como especialista" />
    <meta name="twitter:description" content="Únete a la plataforma NexoMedix y conecta con pacientes automáticamente. Participa en la versión beta exclusiva para especialistas." />
    <meta name="twitter:image" content="https://profindly.vercel.app/logo.png" />
    <link rel="canonical" href="https://profindly.vercel.app/" />
    <link rel="icon" type="image/x-icon" href="/logo.ico" />
  </head>
  <body>
    <div
      class="bg-gradient-to-br from-[var(--primaryContainer)] via-[var(--background)] to-[var(--tertiaryContainer)] min-h-screen flex flex-col items-center"
    >
      <main class="w-full max-w-3xl flex-1 px-2 sm:px-6 md:px-8 py-4 sm:py-8 md:max-w-4xl lg:max-w-5xl xl:max-w-6xl 2xl:max-w-7xl">
        <Navbar />
        <slot />
      </main>
      <footer
        class="mt-14 sm:mt-24 text-center text-[var(--outline)] text-xs sm:text-sm animate-fade-in-up delay-900 relative z-10 px-1 w-full"
      >
        © 2025 NexoMedix · Todos los derechos reservados
      </footer>
    </div>
    <Analytics />
  </body>
</html>
