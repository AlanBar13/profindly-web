---
import "../styles/global.css";
import Analytics from '@vercel/analytics/astro'
import Navbar from '../components/Navbar.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profindly | Únete como especialista</title>
    <meta
      name="description"
      content="Únete a la plataforma Profindly y conecta con pacientes automáticamente. Participa en la versión beta exclusiva para especialistas."
    />
    <link rel="icon" type="image/x-icon" href="/src/assets/logo.ico" />
  </head>
  <body>
    <div
      class="bg-gradient-to-br from-[var(--primaryContainer)] via-[var(--background)] to-[var(--tertiaryContainer)] min-h-screen flex flex-col items-center"
    >
      <main class="w-full max-w-3xl flex-1 px-2 sm:px-6 md:px-8 py-4 sm:py-8 md:max-w-4xl lg:max-w-5xl xl:max-w-6xl 2xl:max-w-7xl">
        <Navbar />
        <slot />
      </main>
      <footer
        class="mt-14 sm:mt-24 text-center text-[var(--outline)] text-xs sm:text-sm animate-fade-in-up delay-900 relative z-10 px-1 w-full"
      >
        © 2025 Profindly · Todos los derechos reservados
      </footer>
    </div>
    <Analytics />
  </body>
</html>
