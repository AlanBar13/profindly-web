---
import "../styles/global.css";
import Analytics from '@vercel/analytics/astro'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profindly | Únete como especialista</title>
    <meta
      name="description"
      content="Únete a la plataforma Profindly y conecta con pacientes automáticamente. Participa en la versión beta exclusiva para especialistas."
    />
  </head>
  <body>
    <div
      class="bg-gradient-to-br from-[var(--primaryContainer)] via-[var(--background)] to-[var(--tertiaryContainer)]"
    >
      <slot />
      <footer
        class="mt-14 sm:mt-24 text-center text-[var(--outline)] text-xs sm:text-sm animate-fade-in-up delay-900 relative z-10 px-1"
      >
        © 2025 Profindly · Todos los derechos reservados
      </footer>
      <Analytics />
    </div>
  </body>
</html>
